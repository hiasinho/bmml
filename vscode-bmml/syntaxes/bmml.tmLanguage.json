{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BMML",
  "scopeName": "source.bmml",
  "patterns": [
    { "include": "#comment" },
    { "include": "#version" },
    { "include": "#id-reference" },
    { "include": "#id-definition" },
    { "include": "#top-level-keys" },
    { "include": "#enum-values" },
    { "include": "#meta-keys" },
    { "include": "#nested-keys" },
    { "include": "#string" },
    { "include": "#number" },
    { "include": "#boolean" },
    { "include": "#null" },
    { "include": "#array-item" },
    { "include": "#key-value" }
  ],
  "repository": {
    "comment": {
      "name": "comment.line.number-sign.bmml",
      "match": "#.*$"
    },
    "version": {
      "match": "^(version):\\s*([\"']?1\\.0[\"']?)",
      "captures": {
        "1": { "name": "keyword.control.version.bmml" },
        "2": { "name": "constant.numeric.version.bmml" }
      }
    },
    "id-definition": {
      "match": "\\b(id):\\s*([\"']?)(cs|vp|ps|job|pain|gain|fit|ch|cr|rs|kr|ka|kp)-[a-z0-9-]+\\2",
      "captures": {
        "1": { "name": "entity.name.tag.id.bmml" },
        "2": { "name": "punctuation.definition.string.bmml" },
        "3": { "name": "entity.name.type.id-prefix.bmml" }
      },
      "name": "entity.name.function.id.bmml"
    },
    "id-reference": {
      "match": "([\"']?)(cs|vp|ps|job|pain|gain|fit|ch|cr|rs|kr|ka|kp)-[a-z0-9-]+\\1",
      "captures": {
        "1": { "name": "punctuation.definition.string.bmml" },
        "2": { "name": "entity.name.type.id-prefix.bmml" }
      },
      "name": "variable.other.reference.bmml"
    },
    "top-level-keys": {
      "match": "^(meta|customer_segments|value_propositions|fits|channels|customer_relationships|revenue_streams|key_resources|key_activities|key_partnerships|cost_structure):",
      "captures": {
        "1": { "name": "keyword.control.toplevel.bmml" }
      }
    },
    "meta-keys": {
      "match": "^\\s+(name|tagline|created|updated|portfolio|stage|derived_from):",
      "captures": {
        "1": { "name": "support.type.property-name.meta.bmml" }
      }
    },
    "nested-keys": {
      "match": "^\\s+(id|name|type|description|jobs|pains|gains|products_services|pain_relievers|gain_creators|job_addressers|pain|gain|job|through|value_proposition|customer_segment|segment|segments|phases|from_segments|for_value|pricing|provides|linked_to|characteristics|major_costs|importance|severity|motivation):",
      "captures": {
        "1": { "name": "support.type.property-name.bmml" }
      }
    },
    "enum-values": {
      "patterns": [
        {
          "match": "\\b(explore|exploit)\\b",
          "name": "constant.language.portfolio.bmml"
        },
        {
          "match": "\\b(ideation|discovery|validation|acceleration|improve|grow|sustain|retire|transfer)\\b",
          "name": "constant.language.stage.bmml"
        },
        {
          "match": "\\b(functional|emotional|social)\\b",
          "name": "constant.language.job-type.bmml"
        },
        {
          "match": "\\b(low|medium|high)\\b",
          "name": "constant.language.level.bmml"
        },
        {
          "match": "\\b(product|service|digital|financial)\\b",
          "name": "constant.language.product-type.bmml"
        },
        {
          "match": "\\b(direct|indirect|owned|partner)\\b",
          "name": "constant.language.channel-type.bmml"
        },
        {
          "match": "\\b(awareness|evaluation|purchase|delivery|after_sales)\\b",
          "name": "constant.language.channel-phase.bmml"
        },
        {
          "match": "\\b(personal_assistance|dedicated|self_service|automated|community|co_creation)\\b",
          "name": "constant.language.relationship-type.bmml"
        },
        {
          "match": "\\b(transaction|recurring|licensing|subscription|usage|advertising)\\b",
          "name": "constant.language.revenue-type.bmml"
        },
        {
          "match": "\\b(fixed_menu|dynamic|negotiation|auction|market_dependent|volume_dependent)\\b",
          "name": "constant.language.pricing-type.bmml"
        },
        {
          "match": "\\b(physical|intellectual|human|financial)\\b",
          "name": "constant.language.resource-type.bmml"
        },
        {
          "match": "\\b(production|problem_solving|platform)\\b",
          "name": "constant.language.activity-type.bmml"
        },
        {
          "match": "\\b(strategic_alliance|coopetition|joint_venture|supplier)\\b",
          "name": "constant.language.partnership-type.bmml"
        },
        {
          "match": "\\b(optimization|risk_reduction|resource_acquisition)\\b",
          "name": "constant.language.motivation-type.bmml"
        },
        {
          "match": "\\b(cost_driven|value_driven)\\b",
          "name": "constant.language.cost-type.bmml"
        },
        {
          "match": "\\b(fixed_costs_heavy|variable_costs_heavy|economies_of_scale|economies_of_scope|fixed|variable)\\b",
          "name": "constant.language.cost-characteristic.bmml"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double.bmml",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bmml",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.bmml",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.bmml",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "number": {
      "name": "constant.numeric.bmml",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    "boolean": {
      "name": "constant.language.boolean.bmml",
      "match": "\\b(true|false|yes|no)\\b"
    },
    "null": {
      "name": "constant.language.null.bmml",
      "match": "\\b(null|~)\\b"
    },
    "array-item": {
      "match": "^(\\s*)-\\s*",
      "captures": {
        "1": { "name": "punctuation.definition.block.sequence.item.bmml" }
      }
    },
    "key-value": {
      "match": "^(\\s*)([\\w_-]+):",
      "captures": {
        "2": { "name": "entity.name.tag.yaml.bmml" }
      }
    }
  }
}
